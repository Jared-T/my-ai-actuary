# Application Settings
APP_NAME="My AI Actuary"
APP_VERSION="0.1.0"
ENVIRONMENT=development
DEBUG=true

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=1

# CORS Settings (comma-separated list of origins)
CORS_ORIGINS=http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# Supabase Settings
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# OpenAI Settings
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=console  # console or json

# Database Settings
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/my_ai_actuary
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/my_ai_actuary
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_POOL_OVERFLOW=10

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
